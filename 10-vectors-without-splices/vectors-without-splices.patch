+				// `[~@a ...] => (apply vector (seq (concat ~@a ...)))
+				if(hasSplice(seq))
+					ret = RT.list(APPLY, VECTOR, RT.list(SEQ, RT.cons(CONCAT, sqExpandList(((IPersistentVector) form).seq()))));
